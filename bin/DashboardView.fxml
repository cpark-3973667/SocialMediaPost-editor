<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="center" spacing="20" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DashboardController">
    <Label fx:id="welcomeLabel">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <Button text="Edit Profile" onAction="#openEditProfileWindow" />
    <Button text="Add Social Media Post" onAction="#openAddPostWindow" />
    <Button text="Retrieve Post" onAction="#openRetrievePostWindow" />
    <Button text="Remove Post" onAction="#openRemovePostWindow" />
    <Button text="Retrieve Top N Posts" onAction="#openRetrieveTopNPostsWindow" />
    <Button text="Export Post to CSV" onAction="#openExportToCSVWindow" />
    <Button text="Log Out" onAction="#handleLogout" />
</VBox>
