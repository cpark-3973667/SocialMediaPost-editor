<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" spacing="20" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ExportManagerController">
    <children>
        <Label text="Post name:"/>
        <TextField fx:id="fileNameField" promptText="Post name"/>
        <Label fx:id="postIdLabel" text="Enter post ID:"/>
        <TextField fx:id="postIdField" promptText="Post ID"/>
        <Button text="Choose File Location" onAction="#handleChooseFileLocation"/>
        <Label fx:id="fileLocationLabel" text="Chosen Directory Displayed Here"/>
        <Button text="Export" onAction="#handleExportPost"/>
    </children>
</VBox>
